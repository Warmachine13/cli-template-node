{
  "ts-node": {
    "swc": true
  },
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "lib": ["es6", "es2015", "dom"],
    "declaration": true,
    "outDir": "lib",
    "rootDir": "./src",
    "baseUrl": "./src",
    "strict": false,
    "types": ["node"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
      "paths": {
      "@domain/*": ["./domain/*"],
      "@factories/*": ["./factories/*"],
      "@resources/*": ["./resources/*"],
      "@infra/*": ["./infra/*"]
    },
  },
  "include": ["src/**/*"],
  "exclude": ["**/node_modules/**/**", "dist"]
}
