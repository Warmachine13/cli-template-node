{
  "name": "clean_code_template_cli",
  "description": "Professional API using Clean Architecture and TDD.",
  "license": "GPL-3.0-or-later",
  "version": "0.0.24",
  "keywords": [
    "clean architecture",
    "clean code",
    "tdd",
    "ddd",
    "solid",
    "design patterns",
    "node",
    "typescript",
    "jest"
  ],
  "bin": {
    "clean_code_template_cli": "./index.js"
  },
  "main": "./index.js",
  "scripts": {
    "prepublishOnly": "npm run build && cp -r ./dist/* . && rm -rf ./dist",
    "postpublish": "git clean -fd",
    "start": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "start:windows": "nodemon --watch 'src/**/*.ts' --exec \"npx ts-node\" src/index.ts",
    "create": "npm run build && npm run test",
    "build": "swc src --extensions \".js,.ts\" --out-dir dist --copy-files",
    "local:link": "npm run prepublishOnly && npm link && npm run postpublish",
    "local": "sudo npm i -g && template_node",
    "refresh": "rm -rf ./node_modules ./package-lock.json && npm install",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix"
  },
  "dependencies": {
    "chalk": "^5.1.2",
    "commander": "^9.4.1",
    "inquirer": "^9.1.4",
    "pino": "^8.8.0",
    "pino-pretty": "^9.1.1"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.59",
    "@swc/core": "^1.3.30",
    "@swc/helpers": "^0.4.14",
    "@types/node": "^18.11.10",
    "@vitest/coverage-c8": "^0.28.3",
    "@vitest/ui": "^0.27.2",
    "nodemon": "^2.0.20",
    "regenerator-runtime": "^0.13.11",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "eslint": "^8.32.0",
    "eslint-config-standard-with-typescript": "^31.0.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "vitest": "^0.28.4"
  }
}
