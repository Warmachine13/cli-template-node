{
  "minify": true,
  "jsc": {
    "parser": {
      "syntax": "typescript",
      "dynamicImport": false,
      "decorators": true
    },
    "target": "es2020",
    "paths": {
      "@domain/*": ["./domain/*"],
      "@factories/*": ["./factories/*"],
      "@resources/*": ["./resources/*"],
      "@infra/*": ["./infra/*"]
    },
    "preserveAllComments": false,
    "baseUrl": "./src",
    "loose": false,
    "externalHelpers": false,
    "transform": {
      "legacyDecorator": true,
      "decoratorMetadata": true
    }
  },
  "module": {
    "type": "commonjs"
  }
}
